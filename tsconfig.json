{
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist/krm-devkit/esm",
        "declaration": true,
        "module": "esnext",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "rootDir": "./src",
        "skipLibCheck": true,
        "types": [
            "node"
        ],
        "target": "es6",
        "lib": [
            "dom",
            "es2018"
        ],
        "paths": {
        }
    },
    "include": [
        "src/**/*"
    ]
}
